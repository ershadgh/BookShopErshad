@model IEnumerable<BookShop.Models.ViewModels.BooksIndexViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject BookShop.Classes.ConvertDate convertdate
@{
    ViewData["Title"] = "AdvansedSearch";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
             <span>نتایج جستجو پیشرفته</span>
             <a href="/Admin/Books/Index" style="font-size:13px;" class="float-left" >بازگشت به لیست کتاب ها</a>
            </div>
               <div class="card-body">
                   <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
             
                                <th>ردیف</th>
                                <th>عنوان</th>
                                <th>نویسندگان</th>
                                <th>مترجمان</th>
                                <th>دسته بندی</th>
                                <th>زبان</th>
                                <th>شابک</th>
                                <<th>موجودی</th>
                                <th>ناشر</th>
                                <th> قیمت</th>
                                <th>تاریخ انتشار</th>
                                <th> وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i=1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@i</td>
                                    <td class="text-nowrap">@item.Title</td>
                                    <td>@item.Author</td>
                                    <td>@item.Translatorr</td>
                                    <td>@item.category</td>
                                    <td>@item.Language</td>
                                    <td>@item.ISBN</td>
                                    <td>@item.Stock</td>
                                    <td>@item.PublusherName</td>
                                    <td class="text-center">@item.Price</td>
                                    <td class="text-center">
                                        @if (@item.PublisheDate!=null)
                                        {
                                            @convertdate.ConverMiladitoShamsi((DateTime)item.PublisheDate,"yyyy/MM/dd")
                                            
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.Ispublise == true)
                                        {
                                            <label class="badge badge-success btn-block">منتشر شده</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-success btn-block">پیش نویس</label>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-info btn-icon"><i class="fa fa-eye text-white"></i></a>
                                        <a class="btn btn-success btn-icon"><i class="fa fa-edit text-white"></i></a>
                                        <a class="btn btn-danger btn-icon"><i class="fa fa-trash text-white"></i></a>
                                    </td>
                                </tr>
                                i++;
                            }
                           
                           
                        </tbody>
                       
                    </table>
               </div>
             </div>

     </div>
   </div>
</div>